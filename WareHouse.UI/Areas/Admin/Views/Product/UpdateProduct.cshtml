
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model WareHouse.UI.Areas.Admin.Models.VM.ProductVM


<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/Category/AddProduct">Add Product</a></li>
        <li><a href="/Admin/Category/ProductList">Product List</a></li>
        <li class="active">Update Product</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Product</h3>
                </div>
                <form action="/Admin/Product/UpdateProduct" enctype="multipart/form-data" method="post" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">Product Name</label>
                            <input type="text" value="@Model.Product.ProductName" name="ProductName" class="form-control" placeholder="Product Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Description</label>
                            <input type="text" value="@Model.Product.ProductDescription" name="ProductDescription" class="form-control" placeholder="Description">
                        </div>
                        <div class="form-group">
                            <label for="text">Unit Price</label>
                            <input type="text" value="@Model.Product.UnitPrice" name="UnitPrice" class="form-control" placeholder="Unit Price">
                        </div>
                        <div class="form-group">
                            <label for="text">Units In Stock</label>
                            <input type="text" value="@Model.Product.UnitsInStock" name="UnitsInStock" class="form-control" placeholder="Units In Stock">
                        </div>
                        <div class="form-group">
                            <label for="CategoryID">Choose Category</label>
                            <select name="CategoryID" class="form-control">
                                @foreach (var item in Model.Categories)
                                {
                                    <option value="@item.ID">@item.CategoryName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <input type="text" style="visibility:hidden" name="ID" value="@Model.Product.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

